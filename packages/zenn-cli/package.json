{
  "name": "zenn-cli",
  "license": "MIT",
  "version": "0.1.75",
  "description": "Preview Zenn content locally.",
  "bin": {
    "zenn": "bin/zenn.js"
  },
  "files": [
    ".next",
    "dist",
    "bin",
    "public"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier components cli pages --write",
    "start": "next -p 3002",
    "dev": "next -p 3002",
    "dev:debug": "NODE_OPTIONS='--inspect' next dev -p 3002",
    "test": "jest --updateSnapshot",
    "test:watch": "jest --watch",
    "build:bin": "rimraf dist/* && tsc --project tsconfig.cli.json",
    "build:next": "next build && rimraf .next/cache",
    "build": "npm run lint && npm run build:bin & npm run build:next",
    "start:cli": "npm run build:bin && node bin/zenn.js"
  },
  "dependencies": {
    "@types/update-notifier": "^5.0.0",
    "arg": "^4.1.3",
    "chokidar": "^3.4.2",
    "colors": "^1.4.0",
    "crypto-random-string": "^3.2.0",
    "emoji-regex": "^9.0.0",
    "escape-html": "^1.0.3",
    "fs-extra": "^9.0.1",
    "gray-matter": "^4.0.2",
    "js-yaml": "^3.14.0",
    "next": "10.0.5",
    "open": "^7.3.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "socket.io": "^3.1.0",
    "socket.io-client": "^3.1.0",
    "string-argv": "^0.3.1",
    "update-notifier": "^5.1.0",
    "zenn-content-css": "^0.1.75",
    "zenn-embed-elements": "^0.1.75",
    "zenn-markdown-html": "^0.1.75"
  },
  "devDependencies": {
    "@testing-library/react": "^11.2.1",
    "@types/emoji-regex": "^8.0.0",
    "@types/escape-html": "^1.0.0",
    "@types/fs-extra": "^9.0.1",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.0.5",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/webpack": "^4.41.17",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.5",
    "jest": "^26.6.3",
    "prettier": "^2.0.5",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^3.0.2",
    "sass": "^1.26.8",
    "ts-jest": "^26.5.1",
    "typescript": "^3.9.3"
  },
  "gitHead": "4d1b8deae4a6f359c0e6b25bb74aebd69af93458",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=10.13.0"
  }
}
